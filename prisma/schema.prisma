generator client {
  provider      = "prisma-client-js"
  output        = "../generated/prisma"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Client {
  id         Int       @id @default(autoincrement())
  internalId String    @unique
  name       String
  email      String    @unique
  date       DateTime
  createdAt  DateTime  @default(now())
  
  invoices   Invoice[]
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
}

model Invoice {
  id                    Int           @id @default(autoincrement())
  title                 String        @unique
  monetaryValue         Decimal?       
  invoiceExpiresDate    DateTime?
  invoiceReferenceMonth DateTime?
  issuerCnpj            String?      
  invoiceId             String?       @unique      
  postalCode            String?
  address               String?
  neighborhood          String?
  paidInvoiceDate       DateTime?         
  invoiceStatus         InvoiceStatus
  
  clientId              Int
  client                Client        @relation(fields: [clientId], references: [id])

  createdAt             DateTime      @default(now())
  updatedAt             DateTime      @updatedAt
}

enum InvoiceStatus {
  PAID
  UNPAID
}